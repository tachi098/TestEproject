@model DemoProject.Entities.User
@{
    ViewData["Title"] = "Create";
}

<h1>Create New User</h1>
<div class="container">
    <div class="row">
        <div class="col-md-8">
            <form asp-action="Create" enctype="multipart/form-data">
                <div class="form-group col-sm-12">
                    <p>Full Name</p>
                    <input type="text" asp-for="name" class="form-control col-sm-8" />
                    <span asp-validation-for="name"></span>
                </div>
                <div class="form-group col-sm-12">
                    <p>Email</p>
                    <input type="text" asp-for="email" class="form-control col-sm-8" />
                    <span asp-validation-for="email"></span>
                    <p style="color:red">@ViewBag.MsgEmail</p>
                </div>
                <div class="form-group col-sm-12">
                    <p>Phone</p>
                    <input type="text" asp-for="phone" class="form-control col-sm-8" />
                    <span asp-validation-for="phone"></span>
                </div>
                <div class="form-group col-sm-12">
                    <p>Address</p>
                    <input type="text" asp-for="address" class="form-control col-sm-8" />
                    <span asp-validation-for="address"></span>
                </div>
                <div class="form-group col-sm-12">
                    <p>Password</p>
                    <input type="password" asp-for="password" class="form-control col-sm-8" />
                    <span asp-validation-for="password"></span>
                </div>
                <div class="form-group col-sm-12">
                    <p>Avarta</p>
                    <input type="file" name="file" class="form-control col-sm-8" />
                    <span asp-validation-for="avatar"></span>
                </div>
                <input type="submit" value="Submit" class="btn btn-primary" />
            </form>
            <p style="color:red">@ViewBag.Msg</p>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
